@using webshop_projekt.Misc
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - WebShop</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("WebShop", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Početna", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    @if (User.Identity.IsAuthenticated && (User as LogiraniKorisnik).IsInRole(OvlastiKorisnik.Administrator))
                    {
                        <li>@Html.ActionLink("Skladište", "Index", "Proizvods", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Proizvodaci", "Index", "Proizvodacs", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Kategorije", "Index", "Kategorijas", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Dodavanje proizvoda", "Create", "Proizvods", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Dodavanje proizvodaca", "Create", "Proizvodacs", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Dodavanje kategorija", "Create", "Kategorijas", new { area = "" }, new { @class = "nav-link" })</li>
                    }
                </ul>
                <ul class="navbar-nav flex-grow-1" style="justify-content:right">
                    <li>@Html.ActionLink("Košarica", "Index", "KosaricaItems", new { area = "" }, new { @class = "nav-link" })</li>
                    @if (User.Identity.IsAuthenticated && (User as LogiraniKorisnik).IsInRole(OvlastiKorisnik.Administrator))
                    {
                        <li>@Html.ActionLink(((User as LogiraniKorisnik).PrezimeIme), "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Odjava", "Odjava", "Korisniks", new { area = "" }, new { @class = "nav-link" })</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Prijava","Prijava","Korisniks", new { area = "" }, new { @class = "nav-link" })</li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>